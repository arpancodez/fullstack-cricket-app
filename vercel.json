{
  "version": 2,
  "buildCommand": "cd backend && npm run build && cd ../frontend && npm run build",
  "installCommand": "npm install --prefix backend && npm install --prefix frontend",
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "frontend",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/$1",
      "methods": ["GET", "HEAD"]
    },
    {
      "src": ".*",
      "dest": "/frontend/build/index.html"
    }
  ]
}
