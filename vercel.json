{
  "version": 2,
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node" },
    { "src": "frontend/package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/auth/(.*)", "dest": "/api/auth.ts" },
    { "src": "/api/matches/(.*)", "dest": "/api/matches.ts" },
    { "src": "/api/players/(.*)", "dest": "/api/players.ts" },
    { "src": "/api/scores/(.*)", "dest": "/api/scores.ts" },
    { "src": "/api/auth", "dest": "/api/auth.ts" },
    { "src": "/api/matches", "dest": "/api/matches.ts" },
    { "src": "/api/players", "dest": "/api/players.ts" },
    { "src": "/api/scores", "dest": "/api/scores.ts" },
    { "src": "/api/(.*)", "dest": "/api/index.ts" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ]
}
